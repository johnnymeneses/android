<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom|right"
        android:text="5x50+9"
        android:textColor="@color/igual_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom|right"
        android:text="259"
        android:textColor="@color/teclas_Dark"
        android:textSize="75sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="( )" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="%" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"

            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"

            android:text="x" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"

            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"

            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="+/-" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"

            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_Igual"
            android:layout_gravity="center_vertical"

            android:text="=" />
    </LinearLayout>

</LinearLayout>