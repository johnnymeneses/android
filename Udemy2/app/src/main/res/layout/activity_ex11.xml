<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ex11">

    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#855E53"
        android:gravity="center_horizontal|center_vertical"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/flames"
        app:layout_constraintTop_toBottomOf="@id/header" />


    <ImageView
        android:id="@+id/flames"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"

        android:src="@drawable/ic_flame"
        app:layout_constraintLeft_toRightOf="@id/heart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <TextView
        android:id="@+id/textoMinutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_tempo"
        android:textColor="#736D6D"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heart" />

    <TextView
        android:id="@+id/textoLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54214"
        android:textColor="#736D6D"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flames" />

    <View
        android:id="@+id/view_linha"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heart" />

    <TextView
        android:id="@+id/text_bloco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/texto_apresentacao"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_linha" />


    <TextView
        android:id="@+id/text_ingredientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Ingredientes"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_bloco" />

    <ImageView
        android:id="@+id/milestone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_milestone"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ingredientes" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 dose de expresso"
        app:layout_constraintLeft_toLeftOf="@id/milestone1"

</androidx.constraintlayout.widget.ConstraintLayout>